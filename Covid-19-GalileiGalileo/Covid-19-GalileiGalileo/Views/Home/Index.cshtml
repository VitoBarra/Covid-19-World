@model Covid_19_GalileiGalileo.Models.CovidData

@{
    ViewData["Title"] = "Home Page";
    ChartJSCore.Models.Chart chart = (ChartJSCore.Models.Chart)ViewData["chart"];

}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
    <link rel="stylesheet" href="style.css">

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>


    <p class="text-light">world stat:</p>

    <div class="row">
        <div class="column">
            <div class="card">
                <label>Attualmente positivi</label>
                <label>@Model.Cases.Active</label>
            </div>
        </div>

        <div class="column">
            <div class="card">
                <label>Guariti</label>
                <label>@Model.Cases.Recovered</label>
            </div>
        </div>

        <div class="column">
            <div class="card">
                <label>Deceduti</label>
                <label>@Model.Deaths.Total</label>
            </div>
        </div>

        <div class="column">
            <div class="card">
                <label>Totale positivi</label>
                <label>@Model.Cases.Total</label>
            </div>
        </div>
    </div>
    <div style="text-align:center; padding-top:20px" > 
        <img src="~/Resource/jvectormaps.png" width="1000" height="500"/>
    </div>



    <div class="row">

        <div class="column ChartBox">
            <div><canvas id="lineChart1" width="400" height="200"></canvas></div>
        </div>

        <div class="column ChartBox ">
            <div><canvas id="lineChart2" width="400" height="200"></canvas></div>
        </div>

    </div>



    <div class="list-group-">



        <div class="ChartBox" style="height:800px" id="SelectCounty">
            <div class="row">
                <div class="column">
                    <div class="card">
                        <label>Attualmente positivi</label>
                        <label>73.880</label>
                    </div>
                </div>

                <div class="column">
                    <div class="card">
                        <label>Guariti</label>
                        <label>13.030</label>
                    </div>
                </div>

                <div class="column">
                    <div class="card">
                        <label>Deceduti</label>
                        <label>10.779</label>
                    </div>
                </div>

                <div class="column">
                    <div class="card">
                        <label>Totale positivi</label>
                        <label>97.689</label>
                    </div>
                </div>
            </div>

            <div style="text-align:center; width:1000px; height:500px">
                <img src="~/Resource/jvectormaps.png" width="1000" height="500" />
            </div>
        </div>


        <div class="row">

            <div class="column ChartBox">
                <div><canvas id="lineChart3" width="400" height="200"></canvas></div>
            </div>

            <div class="column ChartBox ">
                <div><canvas id="lineChart4" width="400" height="200"></canvas></div>
            </div>

        </div>



    </div>




    @section Scripts
        {
        <script>
                @Html.Raw(chart.CreateChartCode("lineChart1"));
                @Html.Raw(chart.CreateChartCode("lineChart2"));
                @Html.Raw(chart.CreateChartCode("lineChart3"));
                @Html.Raw(chart.CreateChartCode("lineChart4"));
        </script>

    }
</body>